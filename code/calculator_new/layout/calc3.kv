<Calc3@Calc>:
    size: root.size
    BoxLayout:
        CalcButton:
            text: "MC"
            on_press: root.root.mem(self.text)
        CalcButton:
            text: "M+"
            on_press: root.root.mem(self.text)
        CalcButton:
            text: "M-"
            on_press: root.root.mem(self.text)
        CalcButton:
            text: "MS"
            on_press: root.root.mem(self.text)
        CalcButton:
            text: "MRC"
            on_press: root.root.mem(self.text)
    BoxLayout:
        CalcButton:
            text: "sin"
            on_press: root.root.add_value("sin(")
        CalcButton:
            text: "π"
            on_press: root.root.add_value("π")
        CalcButton:
            text: "[i]x[/i][sup][i]y[/i][/sup]"
            markup: True
            on_press: root.root.add_value("^")
        CalcButton:
            text: "CE"
            on_press: root.root.clear()
        CalcButton:
            text: "<-"
            on_press: root.root.delete()
    BoxLayout:
        CalcButton:
            text: "cos"
            on_press: root.root.add_value("cos(")
        CalcButton:
            text: "("
            on_press: root.root.add_value(self.text)
        CalcButton:
            text: ")"
            on_press: root.root.add_value(self.text)
        CalcButton:
            text: "√[i]x[/i]"
            markup: True
        CalcButton:
            text: "+"
            on_press: root.root.add_value(self.text)
    BoxLayout:
        CalcButton:
            text: "tan"
            on_press: root.root.add_value("tan(")
        CalcButton:
            text: "7"
            on_press: root.root.add_value(self.text)
        CalcButton:
            text: "8"
            on_press: root.root.add_value(self.text)
        CalcButton:
            text: "9"
            on_press: root.root.add_value(self.text)
        CalcButton:
            text: "−"
            on_press: root.root.add_value(self.text)
    BoxLayout:
        CalcButton:
            text: "sec"
            on_press: root.root.add_value("sec(")
        CalcButton:
            text: "4"
            on_press: root.root.add_value(self.text)
        CalcButton:
            text: "5"
            on_press: root.root.add_value(self.text)
        CalcButton:
            text: "6"
            on_press: root.root.add_value(self.text)
        CalcButton:
            text: "×"
            on_press: root.root.add_value(self.text)
    BoxLayout:
        CalcButton:
            text: "csc"
            on_press: root.root.add_value("csc(")
        CalcButton:
            text: "1"
            on_press: root.root.add_value(self.text)
        CalcButton:
            text: "2"
            on_press: root.root.add_value(self.text)
        CalcButton:
            text: "3"
            on_press: root.root.add_value(self.text)
        CalcButton:
            text: "÷"
            on_press: root.root.add_value(self.text)
    BoxLayout:
        CalcButton:
            text: "cot"
            on_press: root.root.add_value("cot(")
        CalcButton:
            text: "+/-"
            on_press: root.root.add_value("-")
        CalcButton:
            text: "0"
            on_press: root.root.add_value(self.text)
        CalcButton:
            text: "."
            on_press: root.root.add_value(self.text)
        CalcButton:
            text: "="
            on_press: root.root.calc()
