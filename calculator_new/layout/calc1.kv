<Calc1@Calc>:
    size: root.size
    BoxLayout:
        CalcButton:
            text: "M+"
            on_press: root.root.mem(self.text)
        CalcButton:
            text: "M-"
            on_press: root.root.mem(self.text)
        CalcButton:
            text: "MS"
            on_press: root.root.mem(self.text)
        CalcButton:
            text: "MRC"
            on_press: root.root.mem(self.text)
    BoxLayout:
        CalcButton:
            text: "("
            on_press: root.root.add_value("(")
        CalcButton:
            text: ")"
            on_press: root.root.add_value(")")
        CalcButton:
            text: "CE"
            on_press: root.root.clear()
        CalcButton:
            text: "<-"
            on_press: root.root.delete()
    BoxLayout:
        CalcButton:
            text: "exp"
            on_press: root.root.add_value("e")
        CalcButton:
            text: "X[sup]Y[/sup]"
            markup: True
            on_press: root.root.add_value("^")
        CalcButton:
            text: "√"
            on_press: root.root.add_value(self.text)
        CalcButton:
            text: "+"
            on_press: root.root.add_value(self.text)
    BoxLayout:
        CalcButton:
            text: "7"
            on_press: root.root.add_value(self.text)
        CalcButton:
            text: "8"
            on_press: root.root.add_value(self.text)
        CalcButton:
            text: "9"
            on_press: root.root.add_value(self.text)
        CalcButton:
            text: "−"
            on_press: root.root.add_value(self.text)
    BoxLayout:
        CalcButton:
            text: "4"
            on_press: root.root.add_value(self.text)
        CalcButton:
            text: "5"
            on_press: root.root.add_value(self.text)
        CalcButton:
            text: "6"
            on_press: root.root.add_value(self.text)
        CalcButton:
            text: "×"
            on_press: root.root.add_value(self.text)
    BoxLayout:
        CalcButton:
            text: "1"
            on_press: root.root.add_value(self.text)
        CalcButton:
            text: "2"
            on_press: root.root.add_value(self.text)
        CalcButton:
            text: "3"
            on_press: root.root.add_value(self.text)
        CalcButton:
            text: "÷"
            on_press: root.root.add_value(self.text)
    BoxLayout:
        CalcButton:
            text: "+/-"
            on_press: root.root.add_value("-")
        CalcButton:
            text: "0"
            on_press: root.root.add_value(self.text)
        CalcButton:
            text: "."
            on_press: root.root.add_value(self.text)
        CalcButton:
            text: "="
            on_press: root.root.calc()
