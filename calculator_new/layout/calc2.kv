#:import math math
<Calc2@Calc>:
    size: root.size
    BoxLayout:
        CalcButton:
            text: "MC"
            on_press: root.root.mem(self.text)
        CalcButton:
            text: "M+"
            on_press: root.root.mem(self.text)
        CalcButton:
            text: "M-"
            on_press: root.root.mem(self.text)
        CalcButton:
            text: "MS"
            on_press: root.root.mem(self.text)
        CalcButton:
            text: "MRC"
            on_press: root.root.mem(self.text)
    BoxLayout:
        CalcButton:
            text: "2[sup]nd[/sup]"
            markup: True
        CalcButton:
            text: "π"
            on_press: root.root.add_value(str(math.pi))
        CalcButton:
            text: "e"
            on_press: root.root.add_value(str(math.e))
        CalcButton:
            text: "CE"
            on_press: root.root.clear()
        CalcButton:
            text: "<-"
            on_press: root.root.delete()
    BoxLayout:
        CalcButton:
            text: "[i]x[/i][sup]2[/sup]"
            markup: True
            on_press: root.root.add_value("^2")
        CalcButton:
            text: "1/[i]x[/i]"
            markup: True
            on_press: root.root.add_value("1÷")
        CalcButton:
            text: "|[i]x[/i]|"
            markup: True
        CalcButton:
            text: "exp"
            on_press: root.root.add_value("e")
        CalcButton:
            text: "mod"
            on_press: root.root.add_value("%")
    BoxLayout:
        CalcButton:
            text: "√[i]x[/i]"
            markup: True
            on_press: root.root.add_value("√")
        CalcButton:
            text: "("
            on_press: root.root.add_value(self.text)
        CalcButton:
            text: ")"
            on_press: root.root.add_value(self.text)
        CalcButton:
            text: "[i]n[/i]!"
            markup: True
            on_press: root.root.add_value("!")
        CalcButton:
            text: "+"
            on_press: root.root.add_value(self.text)
    BoxLayout:
        CalcButton:
            text: "[i]x[/i][sup][i]y[/i][/sup]"
            markup: True
            on_press: root.root.add_value("^")
        CalcButton:
            text: "7"
            on_press: root.root.add_value(self.text)
        CalcButton:
            text: "8"
            on_press: root.root.add_value(self.text)
        CalcButton:
            text: "9"
            on_press: root.root.add_value(self.text)
        CalcButton:
            text: "−"
            on_press: root.root.add_value(self.text)
    BoxLayout:
        CalcButton:
            text: "10[sup][i]x[/i][/sup]"
            markup: True
            on_press: root.root.add_value("10^")
        CalcButton:
            text: "4"
            on_press: root.root.add_value(self.text)
        CalcButton:
            text: "5"
            on_press: root.root.add_value(self.text)
        CalcButton:
            text: "6"
            on_press: root.root.add_value(self.text)
        CalcButton:
            text: "×"
            on_press: root.root.add_value(self.text)
    BoxLayout:
        CalcButton:
            text: "log"
        CalcButton:
            text: "1"
            on_press: root.root.add_value(self.text)
        CalcButton:
            text: "2"
            on_press: root.root.add_value(self.text)
        CalcButton:
            text: "3"
            on_press: root.root.add_value(self.text)
        CalcButton:
            text: "÷"
            on_press: root.root.add_value(self.text)
    BoxLayout:
        CalcButton:
            text: "ln"
        CalcButton:
            text: "+/-"
            on_press: root.root.add_value("-")
        CalcButton:
            text: "0"
            on_press: root.root.add_value(self.text)
        CalcButton:
            text: "."
            on_press: root.root.add_value(self.text)
        CalcButton:
            text: "="
            on_press: root.root.calc()
