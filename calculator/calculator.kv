<CalcButton@Button>:
    font_size: "30sp"
<Calculator>:
    orientation: "vertical"
    out: out
    Label:
        text: root.value
        size: self.size
        text_size: self.size
        font_size: "30sp"
        halign: "right"
        valign: "middle"
        padding_x: "25sp"
        id: out
    BoxLayout:
        size: root.size
        orientation: "horizontal"
        CalcButton:
            text: "E"
            on_press: root.change_value("e")
        CalcButton:
            text: "M+"
            on_press: root.mem("M+")
        CalcButton:
            text: "M-"
            on_press: root.mem("M-")
        CalcButton:
            text: "MRC"
            on_press: root.mem("MRC")
    BoxLayout:
        size: root.size
        orientation: "horizontal"
        CalcButton:
            text: "("
            on_press: root.change_value("(")
        CalcButton:
            text: ")"
            on_press: root.change_value(")")
        CalcButton:
            text: "CE"
            on_press: root.clear()
        CalcButton:
            text: "<-"
            on_press: root.delete()
    BoxLayout:
        size: root.size
        orientation: "horizontal"
        CalcButton:
            text: "+/-"
            on_press: root.change_value("-")
        CalcButton:
            text: "x^y"
            on_press: root.change_value("^")
        CalcButton:
            text: "√x"
            on_press: root.change_value("√")
        CalcButton:
            text: "+"
            on_press: root.change_value("+")
    BoxLayout:
        size: root.size
        orientation: "horizontal"
        CalcButton:
            text: "7"
            on_press: root.change_value("7")
        CalcButton:
            text: "8"
            on_press: root.change_value("8")
        CalcButton:
            text: "9"
            on_press: root.change_value("9")
        CalcButton:
            text: "−"
            on_press: root.change_value("−")
    BoxLayout:
        size: root.size
        orientation: "horizontal"
        CalcButton:
            text: "4"
            on_press: root.change_value("4")
        CalcButton:
            text: "5"
            on_press: root.change_value("5")
        CalcButton:
            text: "6"
            on_press: root.change_value("6")
        CalcButton:
            text: "×"
            on_press: root.change_value("×")
    BoxLayout:
        size: root.size
        orientation: "horizontal"
        CalcButton:
            text: "1"
            on_press: root.change_value("1")
        CalcButton:
            text: "2"
            on_press: root.change_value("2")
        CalcButton:
            text: "3"
            on_press: root.change_value("3")
        CalcButton:
            text: "÷"
            on_press: root.change_value("÷")
    BoxLayout:
        size: root.size
        orientation: "horizontal"
        CalcButton:
            text: "0"
            on_press: root.change_value("0")
        BoxLayout:
            size: root.size
            orientation: "horizontal"
            CalcButton:
                text: "."
                on_press: root.change_value(".")
            CalcButton:
                text: "="
                on_press: root.calc()
